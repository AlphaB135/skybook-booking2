generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model flights {
  id             Int        @id @default(autoincrement())
  flight_number  String     @db.VarChar(10)
  from_city      String     @db.VarChar(100)
  to_city        String     @db.VarChar(100)
  departure_time DateTime   @db.Time(0)
  price          Decimal    @db.Decimal(10, 2)
  created_at     DateTime?  @default(now()) @db.Timestamp(0)
  bookings       bookings[]
}

model users {
  id         Int        @id @default(autoincrement())
  name       String     @db.VarChar(255)
  phone      String     @db.VarChar(20)
  image      String?    @db.VarChar(500)
  created_at DateTime?  @default(now()) @db.Timestamp(0)
  password   String?    @db.VarChar(255)
  id_card    String?    @db.VarChar(13)
  bookings   bookings[]
}

model bookings {
  id                Int       @id @default(autoincrement())
  user_id           Int
  flight_id         Int
  booking_reference String    @db.VarChar(20)
  seat_number       String?   @db.VarChar(5)
  created_at        DateTime? @default(now()) @db.Timestamp(0)
  users             users     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "bookings_ibfk_1")
  flights           flights   @relation(fields: [flight_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "bookings_ibfk_2")

  @@index([flight_id], map: "flight_id")
  @@index([user_id], map: "user_id")
}
